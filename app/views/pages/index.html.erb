<h1>I Love Cookies!</h1>

<div class="wrapper">
  <div class="d-flex justify-content-around">
    <% @categories.each do |category| %>
      <%= link_to category_path(category) do %>
        <div class="btn btn-primary">
          <%= category.name %>
        </div>
      <% end %>
  <% end %>
  </div>
  <div class="product-cards-grid">
    <% @categories.each do |category| %>
      <% if category.visible_homepage == true %>
        <% category.subcategories.each do |subcategory| %>
          <% subcategory.products.each do |product| %>
            <%= link_to product_path(product) do %>
              <div class="product-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path product.photo.key, height: 400, width: 400, crop: :fill%>')">
              <%= product.name %>
              </div>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>


